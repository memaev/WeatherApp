<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mik.maev.weatherapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_rain_cloud_icon_icons_com_54268"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_rain_cloud_icon_icons_com_54268"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mik.maev.weatherapp.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mik.maev.weatherapp.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="mik.maev.weatherapp.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"></activity>
    </application>

</manifest>